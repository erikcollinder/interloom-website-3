---
layout: base.njk
---
<article class="py-12 px-4">
  <div class="mx-auto max-w-2xl">
    <header class="mb-8 pb-4 border-b border-line">
      <h1 class="font-serif text-2xl font-normal mb-2">{{ title }}</h1>
      <time class="text-sm text-fg-3">{{ date | dateFormat }}</time>
    </header>
    <div class="prose">
      {{ content | safe }}
    </div>
  </div>
</article>
